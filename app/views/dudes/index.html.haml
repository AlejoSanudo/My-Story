%h1 Listing Dudes
%table
  %thead
    %tr
      %th Name
      %th Email
      %th
  %tbody
    %tr
    - @dudes.each do |dude|
      %td.testclass= dude.name
      %td= dude.email
      %td= link_to 'Show', dude
      %td= link_to 'Edit', edit_dude_path(dude)
      %td= link_to 'Destroy', dude, method: :delete, data: { confirm: 'Are you sure?'}
= link_to 'New Dude', new_dude_path
